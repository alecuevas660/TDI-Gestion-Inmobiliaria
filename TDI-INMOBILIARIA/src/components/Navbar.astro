---
import logo from '../assets/img/logo.png';

interface NavItem {
  href: string;
  label: string;
  dropdown?: NavItem[];
}

const navItems: NavItem[] = [
  { href: '/', label: 'Inicio' },
  { 
    href: '/servicios', 
    label: 'Servicios',
    dropdown: [
      { href: '/servicios-corretaje', label: 'Corretaje de Propiedades' },
      { href: '/servicios-administracion-propiedades', label: 'Administración de Propiedades' },
      { href: '/servicios-arquitectura', label: 'Arquitectura' },
      { href: '/servicios-legales', label: 'Servicios Legales' },
      { href: '/servicios-obras-civiles', label: 'Obras Civiles' }
    ]
  },

  { href: '/nosotros', label: 'Nosotros' },
  { href: '/contacto', label: 'Contacto' },
];

const carouselItems = [
  { icon: '🏢', text: 'Soluciones integrales en gestión inmobiliaria' },
  { icon: '📱', text: 'WhatsApp: +56 9 5335 2667' },
  { icon: '✉️', text: 'contacto@tdi.com' },
  { icon: '🏆', text: 'Expertos en arquitectura y construcción' }
];
---

<header class="header">
  <div id="carouselTopBar" class="carousel slide top-bar" data-bs-ride="carousel">
    <div class="carousel-inner">
      {carouselItems.map((item, index) => (
        <div class={`carousel-item ${index === 0 ? 'active' : ''}`}>
          <p>{item.icon} {item.text}</p>
        </div>
      ))}
    </div>
  </div>
  <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm animate__animated animate__fadeInDown">
    <div class="container">
      <a class="navbar-brand" href="/" aria-label="TDI Gestión Inmobiliaria Home">
        <div class="logo">
          <div class="logo-main">
            <img src={logo.src} alt="Logo TDI Gestión Inmobiliaria" class="logo-img" />
            <span class="logo-text">TDI</span>
          </div>
          <span class="logo-subtext">Gestión Inmobiliaria</span>
        </div>
      </a>
      <button 
        class="navbar-toggler" 
        type="button" 
        data-bs-toggle="collapse" 
        data-bs-target="#navbarNav" 
        aria-controls="navbarNav" 
        aria-expanded="false" 
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          {navItems.map(({ href, label, dropdown }) => (
            <li class={`nav-item ${dropdown ? 'dropdown' : ''}`}>
              {dropdown ? (
                <>
                  <a 
                    class="nav-link dropdown-toggle" 
                    href={href} 
                    role="button" 
                    data-bs-toggle="dropdown" 
                    aria-expanded="false"
                  >
                    <span class="nav-link-content">{label}</span>
                  </a>
                  <ul class="dropdown-menu">
                    {dropdown.map(({ href, label }) => (
                      <li>
                        <a class="dropdown-item" href={href}>{label}</a>
                      </li>
                    ))}
                  </ul>
                </>
              ) : (
                <a class="nav-link" href={href} data-active={label}>
                  <span class="nav-link-content">{label}</span>
                </a>
              )}
            </li>
          ))}
        </ul>
      </div>
    </div>
  </nav>
</header>

<style>
  body {
    padding-top: 40px;
  }

  .top-bar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    background: linear-gradient(90deg, #003B73 0%, #1a4b8c 100%);
    padding: 10px 0;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  .top-bar .carousel-item p {
    color: white;
    margin: 0;
    font-size: 0.95rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    font-weight: 500;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    position: relative;
  }

  .top-bar .carousel-item p::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 50%;
    width: 0;
    height: 2px;
    background: rgba(255, 255, 255, 0.8);
    transition: all 0.3s ease;
    transform: translateX(-50%);
  }

  .top-bar .carousel-item p:hover {
    opacity: 0.9;
  }

  .top-bar .carousel-item p:hover::after {
    width: 80%;
  }

  .navbar {
    transition: all 0.3s ease;
    padding: 1rem 0;
    background: rgba(255, 255, 255, 0.98) !important;
    backdrop-filter: blur(10px);
    position: relative;
    z-index: 3001;
  }

  .navbar.scrolled {
    padding: 0.5rem 0;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  /* Logo Styles */
  .logo {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    line-height: 1;
  }

  .logo-main {
    display: flex;
    align-items: flex-end;
    gap: 0.5px;
  }

  .logo-img {
    width: 2.2rem;
    height: 2.2rem;
    object-fit: contain;
    display: block;
    position: relative;
    top: -3px;
  }

  .logo-text {
    font-size: 2.2rem;
    font-weight: 800;
    letter-spacing: -1px;
    background: linear-gradient(90deg, #1fd1c7 0%, #2a7cf7 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
  }

  .logo-subtext {
    font-size: 1rem;
    font-weight: 500;
    color: #666;
    margin-top: 2px;
    letter-spacing: 0.5px;
  }

  /* Navigation Styles */
  .navbar-nav {
    gap: 0.5rem;
  }

  .nav-item {
    position: relative;
  }

  .nav-link {
    padding: 0.5rem 1rem !important;
    color: #333 !important;
    font-weight: 500;
    position: relative;
    transition: color 0.3s ease, background 0.3s ease;
    background: none;
    box-shadow: none;
  }

  .nav-link:hover, .nav-link:focus {
    color: #2a7cf7 !important;
    background: none;
    box-shadow: none;
    text-decoration: none;
    transition: color 0.3s;
  }

  .nav-link-content {
    position: relative;
    z-index: 1;
  }

  .nav-link::before,
  .nav-link:hover::before {
    width: 0 !important;
    transition: none !important;
  }

  .nav-link.active {
    background: linear-gradient(90deg, #1fd1c7 0%, #2a7cf7 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
  }

  .nav-link.active::before {
    width: 80%;
  }

  .nav-btn {
    background: #003B73;
    color: white !important;
    padding: 0.5rem 1.5rem !important;
    border-radius: 50px;
    margin-left: 1rem;
    transition: all 0.3s ease;
    border: 2px solid #003B73;
  }

  .nav-btn:hover {
    background: transparent;
    color: #003B73 !important;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(0, 59, 115, 0.2);
  }

  .navbar-toggler {
    border: none;
    padding: 0.5rem;
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .navbar-toggler:focus {
    box-shadow: none;
  }

  .navbar-toggler:hover {
    background: rgba(0, 59, 115, 0.1);
  }

  /* Dropdown Styles */
  .dropdown {
    position: relative;
  }

  .dropdown-menu {
    position: absolute;
    top: 100%;
    left: 0;
    z-index: 3002;
    background: #fff;
    border: none !important;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.13);
    border-radius: 12px;
    padding: 0.5rem 0;
    margin-top: 0.5rem;
    min-width: 220px;
    max-width: 90vw;
    opacity: 0;
    visibility: hidden;
    transform: translateY(10px);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: block;
  }

  .dropdown.open .dropdown-menu,
  .dropdown:hover .dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .dropdown-toggle::after {
    content: '';
    display: inline-block;
    margin-left: 0.5rem;
    vertical-align: middle;
    border-top: 0.3em solid;
    border-right: 0.3em solid transparent;
    border-bottom: 0;
    border-left: 0.3em solid transparent;
    transition: transform 0.3s ease;
  }

  .dropdown.open .dropdown-toggle::after {
    transform: rotate(180deg);
  }

  .dropdown-item {
    padding: 0.8rem 1.5rem;
    border-radius: 8px;
    color: #333;
    font-weight: 500;
    transition: color 0.3s, background 0.3s;
    position: relative;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: none;
    box-shadow: none;
  }

  .dropdown-item:hover, .dropdown-item:focus {
    color: #2a7cf7;
    background: none;
    box-shadow: none;
    text-decoration: none;
    transition: color 0.3s;
  }

  .dropdown-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    width: 3px;
    height: 0;
    background: linear-gradient(90deg, #1fd1c7 0%, #2a7cf7 100%);
    transform: translateY(-50%);
    transition: height 0.2s ease;
    border-radius: 0 2px 2px 0;
  }

  .dropdown-item:hover::before {
    height: 70%;
  }

  .dropdown-item.active {
    background: linear-gradient(90deg, #1fd1c7 0%, #2a7cf7 100%);
    color: white;
  }

  @media (max-width: 991px) {
    .navbar-collapse {
      background: white;
      padding: 1rem;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      margin-top: 1rem;
      max-height: 80vh;
      overflow-y: auto;
    }

    .navbar-nav {
      padding: 0.5rem 0;
    }

    .nav-item {
      border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .nav-item:last-child {
      border-bottom: none;
    }

    .nav-link {
      padding: 1rem !important;
    }

    .dropdown-menu {
      position: static;
      background: rgba(248, 249, 250, 0.9);
      margin-left: 1rem;
      box-shadow: none !important;
      border-left: 2px solid #1fd1c7 !important;
      transform: translateY(0) !important;
      opacity: 0;
      visibility: hidden;
      max-height: 0;
      overflow: hidden;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      padding: 0;
    }

    .dropdown.open .dropdown-menu,
    .dropdown-menu.show {
      opacity: 1;
      visibility: visible;
      max-height: 500px;
      padding: 0.5rem 0;
    }

    .dropdown-item {
      padding: 0.8rem 1.5rem !important;
    }

    .dropdown-item:hover {
      transform: none !important;
      padding-left: 2rem !important;
    }

    .dropdown-item::before {
      display: none;
    }

    .nav-link::before,
    .nav-link:hover::before {
      width: 0 !important;
      transition: none !important;
    }
  }

  @media (max-width: 768px) {
    .logo-img {
      width: 1.6rem;
      height: 1.6rem;
    }
    .logo-text {
      font-size: 1.8rem;
    }
    .logo-subtext {
      font-size: 0.875rem;
    }
    .top-bar .carousel-item p {
      font-size: 0.8rem;
    }
  }

  .header {
    position: relative;
    z-index: 3000;
  }
</style>

<script>
  const handleScroll = () => {
    const header = document.querySelector('.header');
    const navbar = document.querySelector('.navbar');
    const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
    
    if (header && navbar) {
      if (scrollTop > 50) {
        header.classList.add('scrolled');
        navbar.classList.add('scrolled');
      } else {
        header.classList.remove('scrolled');
        navbar.classList.remove('scrolled');
      }
    }
  };

  const setActiveNavLink = () => {
    const navLinks = document.querySelectorAll('.nav-link');
    const dropdownItems = document.querySelectorAll('.dropdown-item');
    const currentPath = window.location.pathname;
    
    navLinks.forEach(link => {
      const href = link.getAttribute('href');
      if (
        href && (
          href === currentPath ||
          (currentPath === '/' && href === '/') ||
          (currentPath !== '/' && href !== '/' && currentPath.startsWith(href))
        )
      ) {
        link.classList.add('active');
      } else {
        link.classList.remove('active');
      }
    });

    dropdownItems.forEach(item => {
      const href = item.getAttribute('href');
      if (href && currentPath === href) {
        item.classList.add('active');
      } else {
        item.classList.remove('active');
      }
    });
  };

  const initializeDropdowns = () => {
    const dropdowns = document.querySelectorAll('.dropdown');
    
    dropdowns.forEach(dropdown => {
      const toggle = dropdown.querySelector('.dropdown-toggle');
      const menu = dropdown.querySelector('.dropdown-menu');
      
      if (toggle && menu) {
        // Manejo de eventos para PC
        if (window.innerWidth >= 992) {
          dropdown.addEventListener('mouseenter', () => {
            dropdown.classList.add('open');
          });
          
          dropdown.addEventListener('mouseleave', () => {
            dropdown.classList.remove('open');
          });
        }
        
        // Manejo de eventos para móvil
        if (window.innerWidth < 992) {
          toggle.addEventListener('click', (e) => {
            e.preventDefault();
            e.stopPropagation();
            
            // Cerrar otros dropdowns
            dropdowns.forEach(otherDropdown => {
              if (otherDropdown !== dropdown) {
                otherDropdown.classList.remove('open');
                const otherMenu = otherDropdown.querySelector('.dropdown-menu');
                if (otherMenu) otherMenu.classList.remove('show');
              }
            });
            
            dropdown.classList.toggle('open');
            menu.classList.toggle('show');
          });
        }
      }
    });

    // Cerrar dropdowns al hacer click fuera
    document.addEventListener('click', (e) => {
      const target = e.target as HTMLElement;
      
      if (!target.closest('.dropdown')) {
        dropdowns.forEach(dropdown => {
          dropdown.classList.remove('open');
          const menu = dropdown.querySelector('.dropdown-menu');
          if (menu) menu.classList.remove('show');
        });
      }
    });
  };

  document.addEventListener('astro:page-load', () => {
    window.addEventListener('scroll', handleScroll);
    setActiveNavLink();
    initializeDropdowns();
  });

  document.addEventListener('astro:after-swap', () => {
    setActiveNavLink();
    initializeDropdowns();
  });
</script>
